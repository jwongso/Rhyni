import { VerticalBox, HorizontalBox, TextEdit, Button } from "std-widgets.slint";

export component App {
    in-out property <string> transcription_input;
    in-out property <string> selected_prompt;
    in-out property <string> processed_output;
    callback send_selection;

    VerticalBox {
        spacing: 5px;
        padding: 5px;

        // Main Content (Input + Output)
        HorizontalBox {
            spacing: 5px;

            // Left Side (Input + Selected Prompt)
            VerticalBox {
                spacing: 5px;
                TextEdit {
                    text: transcription_input;
                    placeholder-text: "Transcription Input";
                }
                TextEdit {
                    text: selected_prompt;
                    placeholder-text: "Selected Prompt";
                }
            }

            // Right Side (Processed Output)
            TextEdit {
                text: processed_output;
                placeholder-text: "Processed Output";
            }
        }

        // Button (Send Selection)
        Button {
            text: "Send Selection to GPT";
            clicked => { send_selection(); }
        }
    }
}
